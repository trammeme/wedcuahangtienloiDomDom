@model IEnumerable<DD.Models.SanPhamKhuyenMai>

@{
    ViewBag.Title = "Danh Sách Sản Phẩm Khuyến Mãi";
 <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    }

<h2>Danh Sách Sản Phẩm Khuyến Mãi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản Phẩm</th>
            <th>Mô Tả</th>
            <th>Hình Ảnh</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSanPhamKM</td>
                <td>@item.TenSanPham</td>
                <td>@item.MoTaKhuyenMai</td>
                <td>

                    <img src="@Url.Content(item.HinhAnh)" alt="Hình ảnh sản phẩm" style="width: 100px; height: auto;" /> <!-- Có thể thêm style để điều chỉnh kích thước -->
                </td>
                <td>
                    <!-- Thêm các thao tác như sửa, xóa nếu cần -->
                    <a href="@Url.Action("Edit", new { id = item.MaSanPhamKM })">Sửa</a> |
                    <a href="@Url.Action("Delete", new { id = item.MaSanPhamKM })">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "SanPhamKhuyenMai")" class="btn btn-success">Thêm sản phẩm khuyến mãi mới</a>
