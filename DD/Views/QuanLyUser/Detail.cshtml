@model DD.Models.NguoiDung

@{
    Layout = null;
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

}
<style>
    body {
        background-color: #003366;
        color:  beige;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 600px; /* Giới hạn chiều rộng tối đa */
        margin-top: 50px; /* Thêm khoảng cách trên */
        padding: 20px;
     
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Đổ bóng */
    }

    h4 {
        color: #f44336; /* Màu cho tiêu đề */
        font-size: 32px; /* Kích thước chữ lớn hơn */
        text-align: center; /* Căn giữa */
        margin-bottom: 20px; /* Thêm khoảng cách phía dưới */
    }

    .dl-horizontal dt {
        width: 200px; /* Kích thước cho phần tiêu đề */
        float: left; /* Đặt tiêu đề bên trái */
        clear: left; /* Dọn dẹp các tùy chọn bên trái */
    }

    .btn {
        background-color: #f44336;
        color: white;
        display: block;
        margin: 20px auto; /* Căn giữa nút */
    }

        .btn:hover {
            background-color: #c62828; /* Màu khi di chuột */
            transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu */
        }

    .text-danger {
        color: red;
    }
</style>
<!DOCTYPE html>

<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi Tiết Người Dùng</title>
</head>
<body>
    <div class="container">
        <h4>Chi Tiết Người Dùng</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã Khách Hàng
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MaKH)
            </dd>

            <dt>
                Tên Khách Hàng
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenKH)
            </dd>

            <dt>
                Email
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Giới Tính
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GioiTinh)
            </dd>

            <dt>
                Tháng Sinh
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ThangSinh)
            </dd>

            <dt>
                Địa Chỉ
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>
                Số Điện Thoại
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SoDienThoai)
            </dd>

            <dt>
                Tên Đăng Nhập
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenDangNhap)
            </dd>

            <dt>
                Mật Khẩu
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MatKhau)
            </dd>
        </dl>

        <p>
            <a href="@Url.Action("Index", "Admin")" class="btn">Quay về menu chính</a>
        </p>
    </div>
</body>
</html>