@model IEnumerable<DD.Models.NguoiDung>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Đặt layout cho trang
}
<style>
    /* Định dạng cho container */
    .container {
        margin-top: 30px;
    }

    /* Định dạng cho tiêu đề */
    h2 {
        font-weight: bold;
        color: #343a40;
    }

    /* Định dạng cho bảng */
    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #f8f9fa;
            color: #333;
            padding: 10px;
            text-align: center;
            font-weight: bold;
        }

        .table tbody td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #dee2e6;
        }

    /* Định dạng cho nút */
    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
        margin-right: 5px;
    }

        .btn-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    /* Định dạng cho nút 'Gửi chúc mừng sinh nhật' */
    .btn-primary {
        background-color: #0056b3;
        border: none;
        color: #fff;
        padding: 5px 10px;
        font-size: 0.9rem;
        font-weight: bold;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #007bff;
        }

    /* Định dạng cho thông báo */
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
        font-size: 1rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

</style>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách Khách hàng</title>
    
</head>
<body>
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <h2 class="text-center mb-4">Danh sách Khách hàng</h2>

        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>MÃ KHÁCH HÀNG</th>
                    <th>TÊN KHÁCH HÀNG</th>
                    <th>EMAIL</th>
                    <th>GIỚI TÍNH</th>
                    <th>THÁNG SINH</th>
                    <th>ĐỊA CHỈ</th>
                    <th>SỐ ĐIỆN THOẠI</th>
                    <th>TÊN ĐĂNG NHẬP</th>
                    <th>MẬT KHẨU</th>
                    <th>HÀNH ĐỘNG</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaKH)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                        <td>@Html.DisplayFor(modelItem => item.ThangSinh)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenDangNhap)</td>
                        <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                        <td>
                        <td>
                            <a href="@Url.Action("Edit", "QuanLyUser", new { id = item.MaKH })" class="btn btn-primary btn-sm mx-1">Sửa</a>
                            <a href="@Url.Action("Detail", "QuanLyUser", new { id = item.MaKH })" class="btn btn-info btn-sm mx-1">Xem</a>
                            <a href="@Url.Action("Delete", "QuanLyUser", new { id = item.MaKH })" class="btn btn-danger btn-sm mx-1">Xóa</a>
                            <form action="@Url.Action("SendBirthdayWishes", "QuanLyUser", new { id = item.MaKH })" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-success btn-sm mx-1">
                                    Gửi vocher
                                </button>
                            </form>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>