@using DD.Models
@model DD.Models.RegisterViewModel

<head>
    <link rel="stylesheet" href="~/Content/dangki.css" /> <!-- Liên kết đến file CSS mới -->
</head>

<body>
    <h2 class="text-center" style="color: #ff63417; font-family: 'Pacifico', cursive; font-size: 3em; margin-bottom: 30px;">Đăng Ký Tài Khoản Mới</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group text-center">
            @Html.LabelFor(m => m.TenKH, "Tên Khách Hàng:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.TextBoxFor(m => m.TenKH, new { @class = "form-control form-control-lg", placeholder = "Nhập tên khách hàng...", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.TenKH, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(m => m.Email, "Email:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Nhập email...", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(m => m.GioiTinh, "Giới Tính:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.TextBoxFor(m => m.GioiTinh, new { @class = "form-control form-control-lg", placeholder = "Nam/Nữ", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(m => m.ThangSinh, "Tháng Sinh:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.TextBoxFor(m => m.ThangSinh, new { @class = "form-control form-control-lg", placeholder = "Nhập tháng sinh...", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.ThangSinh, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(m => m.DiaChi, "Địa Chỉ:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control form-control-lg", placeholder = "Nhập địa chỉ...", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(m => m.SoDienThoai, "Số Điện Thoại:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control form-control-lg", placeholder = "Nhập số điện thoại...", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(m => m.TenDangNhap, "Tên Đăng Nhập:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control form-control-lg", placeholder = "Nhập tên đăng nhập...", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(m => m.MatKhau, "Mật Khẩu:", new { @class = "control-label", style = "font-size: 1.5em;" })
            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu...", style = "background-color: #f9f9f9;" })
            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </div>    }

    <script src="~/Scripts/jquery-3.5.1.min.js"></script> <!-- Liên kết đến jQuery -->
    <script src="~/Content/dangki.js"></script> <!-- Liên kết đến file JS -->
</body>
