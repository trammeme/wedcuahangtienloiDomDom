@model IEnumerable<DD.Models.qldanhgia>

<h2>Danh Sách Đánh Giá</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Đánh Giá</th>
            <th>Mã Khách Hàng</th>
            <th>Nội Dung</th>
            <th>Số Sao</th>
            <th>Ngày Đánh Giá</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th> <!-- Thêm cột Hành Động -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDangGia</td>
                <td>@item.MaKH</td>
                <td>@item.NoiDung</td>
                <td>@item.SoSao</td>
                <td>@item.NgayDanhGia</td>
                <td>@(item.IsApproved ? "Đã Duyệt" : "Chưa Duyệt")</td>
                <td>
                    @Html.ActionLink("Duyệt", "Approve", new { maDangGia = item.MaDangGia }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Xóa", "Delete", new { maDangGia = item.MaDangGia }, new { @class = "btn btn-danger" }) |
                    @Html.ActionLink("Trả Lời", "Reply", new { maDangGia = item.MaDangGia, replyContent = "Nội dung trả lời" }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    h2 {
        color: #4a4a4a; /* Màu cho tiêu đề */
    }

    .table {
        color: #333; /* Màu chữ trong bảng */
    }

        .table th {
            background-color: #f8f9fa; /* Màu nền cho tiêu đề bảng */
        }

    .btn {
        padding: 5px 10px;
        text-decoration: none;
        color: white; /* Màu chữ trong nút */
        border-radius: 5px;
    }

    .btn-success {
        background-color: #28a745; /* Màu xanh cho nút Duyệt */
    }

    .btn-danger {
        background-color: #dc3545; /* Màu đỏ cho nút Xóa */
    }

    .btn-info {
        background-color: #17a2b8; /* Màu xanh lam cho nút Trả Lời */
    }
</style>
