
@model IEnumerable<DD.Models.qldanhgia>

<h2>Danh Sách Đánh Giá</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Đánh Giá</th>
            <th>Mã Khách Hàng</th>
            <th>Nội Dung</th>
            <th>Số Sao</th>
            <th>Ngày Đánh Giá</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDangGia</td>
                <td>@item.MaKH</td>
                <td>@item.NoiDung</td>
                <td>@item.SoSao</td>
                <td>@item.NgayDanhGia</td>
                <td>@(item.IsApproved ? "Đã Duyệt" : "Chưa Duyệt")</td>
            </tr>
    <td>
        @Html.ActionLink("Duyệt", "Approve", new { maDangGia = item.MaDangGia }) |
        @Html.ActionLink("Xóa", "Delete", new { maDangGia = item.MaDangGia }) |
        @Html.ActionLink("Trả Lời", "Reply", new { maDangGia = item.MaDangGia, replyContent = "Nội dung trả lời" })
    </td>
        }
    </tbody>
</table>

