@model IEnumerable<DD.Models.BinhLuan>

<div class="comments-list">
    @foreach (var comment in Model)
    {
        <div class="comment-item">
            <div class="user-comment">
                <strong>@comment.MaKH:</strong>
                <p>@comment.NoiDung</p>
                <small>@comment.NgayBinhLuan.ToString("dd/MM/yyyy HH:mm")</small>
            </div>
            @if (!string.IsNullOrEmpty(comment.PhanHoi))
            {
                <div class="admin-reply">
                    <strong>Admin:</strong>
                    <p>@comment.PhanHoi</p>
                    <small>@comment.NgayPhanHoi?.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
            }
        </div>
    }
</div>
