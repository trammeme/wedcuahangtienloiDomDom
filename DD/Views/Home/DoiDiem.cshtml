@model DD.Models.TichDiem
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="page-title">Đổi Điểm Ngay – Nhận Mã Voucher Hấp Dẫn!</h2>

<p>Điểm hiện tại của bạn: @Model.Diem</p>

@using (Html.BeginForm("DoiDiem", "Home", FormMethod.Post))
{
    <label for="soDiem">Số điểm muốn đổi:</label>
    <input type="number" name="soDiem" id="soDiem" min="1" max="@Model.Diem" required />

    <p><strong>Lưu ý:</strong> Nếu bạn đồng ý đổi điểm, số điểm tích lũy của bạn sẽ giảm và cấp bậc thành viên cũng sẽ thay đổi.</p>

    <button type="submit">Xác nhận đổi điểm</button>
}

@if (TempData["ErrorMessage"] != null)
{
    <p style="color:red;">@TempData["ErrorMessage"]</p>
}

@if (TempData["SuccessMessage"] != null)
{
    <p style="color:green;">@TempData["SuccessMessage"]</p>
}
<div class="back-to-home">
    <a href="@Url.Action("Index", "Home")" class="btn-back-home">Quay về trang chủ</a>
</div>

