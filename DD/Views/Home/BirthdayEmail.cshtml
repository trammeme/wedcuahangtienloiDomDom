@model DD.Models.NguoiDung
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Chúc mừng sinh nhật!</title>
</head>
<body style="margin: 0; padding: 0; font-family: Arial, sans-serif;">
    <table role="presentation" style="width: 100%; border-collapse: collapse;">
        <tr>
            <td style="padding: 0;">
                <table role="presentation" style="width: 600px; margin: 0 auto; background-color: #ffffff; border-collapse: collapse;">
                    <!-- Header với hình ảnh -->
                    <tr>
                        <td style="text-align: center; padding: 20px;">
                            <img src="/api/placeholder/600/200" alt="Happy Birthday Banner" style="max-width: 100%; height: auto;" />
                        </td>
                    </tr>

                    <!-- Nội dung chính -->
                    <tr>
                        <td style="padding: 40px 30px;">
                            <h1 style="color: #FF69B4; margin: 0 0 20px 0; font-size: 24px; text-align: center;">
                                🎉 Chúc mừng sinh nhật [Tên khách hàng]! 🎉
                            </h1>

                            <p style="margin: 0 0 20px 0; line-height: 1.5; text-align: center;">
                                Chúng tôi rất vui mừng được gửi đến bạn những lời chúc tốt đẹp nhất nhân dịp sinh nhật của bạn!
                            </p>

                            <p style="margin: 0 0 20px 0; line-height: 1.5; text-align: center;">
                                Để tri ân sự đồng hành của bạn, chúng tôi xin gửi tặng bạn voucher giảm giá đặc biệt:
                            </p>

                            <!-- Voucher box -->
                            <div style="background-color: #FFF5EE; border: 2px dashed #FF69B4; padding: 20px; margin: 20px 0; text-align: center;">
                                <h2 style="color: #FF69B4; margin: 0 0 10px 0;">Voucher sinh nhật</h2>
                                <p style="font-size: 24px; font-weight: bold; margin: 10px 0;">Giảm 20%</p>
                                <p style="margin: 10px 0;">Mã: HPBD[MÃ_KH]2024</p>
                                <p style="font-size: 12px; margin: 10px 0;">Có hiệu lực đến hết tháng sinh nhật của bạn</p>
                            </div>

                            <p style="margin: 20px 0; text-align: center;">
                                <a href="#" style="background-color: #FF69B4; color: #ffffff; padding: 12px 30px; text-decoration: none; border-radius: 5px;">Mua sắm ngay</a>
                            </p>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f5f5f5; padding: 20px; text-align: center;">
                            <p style="margin: 0; font-size: 12px; color: #666666;">
                                © 2024 [Tên công ty]. Mọi quyền được bảo lưu.<br>
                                Địa chỉ: [Địa chỉ công ty]<br>
                                Email: [Email] | Hotline: [Số điện thoại]
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>