        <script>
            $(document).ready(function () {
                // Hành động khi nhấn nút đánh giá
                $('.btn-rating').on('click', function () {
                    $('#rating-modal').css('display', 'block');
                });

                // Hành động khi nhấn nút đóng modal
                $('.close-button').on('click', function () {
                    $('#rating-modal').css('display', 'none');
                });

                // Hành động khi người dùng gửi đánh giá
                $('#submit-rating').on('click', function () {
                    var ratingText = $('#rating-text').val();
                    if (ratingText) {
                        alert('Cảm ơn bạn đã gửi đánh giá: ' + ratingText);
                        $('#rating-text').val(''); // Xóa nội dung đã nhập
                        $('#rating-modal').css('display', 'none'); // Đóng modal
                    } else {
                        alert('Vui lòng nhập đánh giá!');
                    }
                });
            });
        </script>
