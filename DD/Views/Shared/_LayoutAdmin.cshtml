<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DOMDOM - Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/layoutad.css" />
    <style>
        /* Bố cục chính của trang */
        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Sidebar cột trái */
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            padding-top: 20px;
        }

            .sidebar .sidebar-brand {
                text-align: center;
                font-size: 1.5rem;
                font-weight: 700;
                padding: 10px 0;
                color: #ffc107;
            }

            .sidebar .menu-heading {
                padding: 10px;
                font-size: 1rem;
                font-weight: 600;
                color: #adb5bd;
            }

            .sidebar .menu-item {
                display: flex;
                align-items: center;
                padding: 12px 20px;
                color: #f8f9fa;
                text-decoration: none;
                transition: background 0.3s;
            }

                .sidebar .menu-item i {
                    margin-right: 10px;
                }

                .sidebar .menu-item:hover {
                    background-color: #495057;
                    color: #ffc107;
                }

                .sidebar .menu-item.active {
                    background-color: #495057;
                    color: #ffc107;
                }

        /* Nội dung chính bên phải */
        .main-content {
            margin-left: 250px; /* Phần cách để trừ ra khoảng sidebar */
            padding: 20px;
            flex-grow: 1;
            background-color: #f1f3f5;
            min-height: 100vh;
        }

        /* Phần tử container trong nội dung chính */
        .container-fluid {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2>DOMDOM</h2>
        </div>

        <div class="sidebar-menu">
            <div class="menu-heading">Quản lý chung</div>

            <a href="@Url.Action("Index", "SanPham")" class="menu-item">
                <i class="fas fa-box"></i>
                <span>Quản lý sản phẩm</span>
            </a>
            <a href="@Url.Action("Index", "SanPhamKhuyenMai")" class="menu-item">
                <i class="fas fa-box"></i>
                <span>Quản lý sản  khuyến mãi</span>
            </a>
            <div class="menu-heading">Khách hàng</div>
            <a href="@Url.Action("Index", "QuanLyUser")" class="menu-item">
                <i class="fas fa-users"></i>
                <span>Quản lý khách hàng</span>
            </a>
            <a href="@Url.Action("Index", "QuanLiBinhLuan")" class="menu-item">
                <i class="fas fa-comments"></i>
                <span>Quản lý bình luận</span>
            </a>

            <div class="menu-heading">Marketing</div>
            <a href="@Url.Action("Index", "QLKhuyenMai")" class="menu-item">
                <i class="fas fa-percent"></i>
                <span>Quản lý khuyến mãi</span>
            </a>
            <a href="@Url.Action("Index", "QuanLyTichDiem")" class="menu-item">
                <i class="fas fa-star"></i>
                <span>Quản lý tích điểm</span>
            </a>
        </div>
    </div>

    <!-- Nội dung chính -->
    
    <div class="main-content">
        @RenderBody() <!-- Gọi RenderBody để hiển thị nội dung view con -->
    </div>
    @RenderSection("Scripts", required: false)

    <!-- JavaScript cho Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
