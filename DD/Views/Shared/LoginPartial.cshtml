@using DD.Models;
@if (Session["user"] != null)
{
    NguoiDung kh = (NguoiDung)@Session["user"];
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Xin chào: @kh.TenKH<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("ThongTinCaNhan", "User")"><span class="glyphicon glyphicon-user"></span> Thông tin cá nhân</a> </li>
            <li role="separator" class="divider"></li>
            <li><a href="@Url.Action("Logout", "User")"><span class="glyphicon glyphicon-log-in"></span> Đăng xuất</a></li>
        </ul>
    </li>
}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Người dùng<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Register", "User")"><span class="glyphicon glyphicon-user"></span> Đăng ký</a> </li>
            <li role="separator" class="divider"></li>
            <li><a href="@Url.Action("Login", "User")"><span class="glyphicon glyphicon-log-in"></span> Đăng nhập</a></li>
        </ul>
    </li>
}