@model DD.Models.TichDiem

@{
    ViewBag.Title = "Thêm Người Dùng";
}

<h2 class="text-center" style="color: #007bff;">Thêm Người Dùng</h2>

@using (Html.BeginForm())
{
    <div style="width: 50%; margin: auto;">
        <div class="form-group text-center">
            @Html.LabelFor(m => m.maKH)
            @Html.TextBoxFor(m => m.maKH, new { @class = "form-control" })
        </div>
        <div class="form-group text-center">
            @Html.LabelFor(m => m.tenKH)
            @Html.TextBoxFor(m => m.tenKH, new { @class = "form-control" })
        </div>
        <div class="form-group text-center">
            @Html.LabelFor(m => m.diem)
            @Html.TextBoxFor(m => m.diem, new { @class = "form-control" })
        </div>
        <div class="text-center">
            <input type="submit" value="Thêm" class="btn btn-success" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
}</html>
